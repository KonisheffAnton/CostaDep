@model Costa.Entities.Employee
@{
    ViewBag.Title = "Удаление сотрудника";
}

<h2>Удалить сотрудника?</h2>

<table>
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Серия документа</th>
            <th>Номер документа</th>
            <th>Должность</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.SurName</td>
            <td>@Model.FirstName</td>
            <td>@Model.Patronymic</td>
            <td>@(DateTime.Today.Year - Model.DateOfBirth.Year>0)</td>
            <td>@Model.DocSeries</td>
            <td>@Model.DocNumber</td>
            <td>@Model.Position</td>
            </tr>
    </tbody>
</table>

    <div>
        <form asp-controller="Employee" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn" value="Удалить" />
            <a asp-action="EmployeesByDepartment" class="btn">Отмена</a>
            </div>
        </form>
    </div>
