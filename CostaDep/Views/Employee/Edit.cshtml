@model Costa.Models.EmployeeViewModel


<h2>Редактировать сотрудника</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="EmployeeViewModelId" />

    <div class="form-group">
        <label asp-for="SurName">Фамилия</label>
        <input asp-for="SurName" class="form-control" />
        <span asp-validation-for="SurName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">Имя</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic">Отчество</label>
        <input asp-for="Patronymic" class="form-control" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth">Дата рождения</label>
        <input asp-for="DateOfBirth" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DocSeries">Серия документа</label>
        <input asp-for="DocSeries" class="form-control" />
        <span asp-validation-for="DocSeries" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DocNumber">Номер документа</label>
        <input asp-for="DocNumber" class="form-control" />
        <span asp-validation-for="DocNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position">Должность</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId">Департамент:</label>
        <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
            <option value="">Выберите департамент</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="EmployeesByDepartment" class="btn btn-secondary">Отмена</a>
    </div>
</form>