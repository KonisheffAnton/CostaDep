@model IEnumerable<Costa.Entities.Department>

<h2>Департаменты</h2>

<table>
    <thead>
        <tr>
            <th>Название департамента</th>
            <th>Мнемокод</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@department.Code</td>
                <td>
                    <a asp-action="Edit" asp-controller="Department" asp-route-id="@department.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="Department" asp-route-id="@department.Id">Удалить</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<div>
    <form asp-controller="Department" asp-action="Create" method="get">
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Создать" />
        </div>
    </form>
</div>        